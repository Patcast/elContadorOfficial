<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/signIn">

    <fragment
        android:id="@+id/transactionsFilter"
        android:name="be.kuleuven.elcontador10.fragments.transactions.TransactionsFilter"
        android:label="fragment_transactions_filter"
        tools:layout="@layout/fragment_transactions_filter" />
    <fragment
        android:id="@+id/transactionDisplay"
        android:name="be.kuleuven.elcontador10.fragments.transactions.TransactionDisplay"
        android:label="fragment_transaction_display"
        tools:layout="@layout/fragment_transaction_display" >
        <argument
            android:name="id"
            app:argType="string" />
    </fragment>
    <fragment
        android:id="@+id/newTransaction"
        android:name="be.kuleuven.elcontador10.fragments.transactions.TransactionNew"
        android:label="fragment_new_transaction"
        tools:layout="@layout/fragment_transaction_new" >
        <action
            android:id="@+id/action_newTransaction_to_chooseStakeHolderDialog"
            app:destination="@id/chooseStakeHolderDialog" />
    </fragment>
    <fragment
        android:id="@+id/stakeholderDisplay"
        android:name="be.kuleuven.elcontador10.fragments.stakeholders.StakeholderDisplay"
        android:label="fragment_stakeholder_display"
        tools:layout="@layout/fragment_stakeholder_display" >
        <argument
            android:name="id"
            app:argType="string" />
        <action
            android:id="@+id/action_stakeholderDisplay_to_stakeholderSummary"
            app:destination="@id/stakeholderSummary" />
        <action
            android:id="@+id/action_stakeholderDisplay_to_stakeholderNew"
            app:destination="@id/stakeholderNew" />
    </fragment>
    <fragment
        android:id="@+id/stakeholderFilter"
        android:name="be.kuleuven.elcontador10.fragments.stakeholders.StakeholderFilter"
        android:label="fragment_stakeholder_filter"
        tools:layout="@layout/fragment_stakeholder_filter" >
        <action
            android:id="@+id/action_stakeholderFilter_to_stakeholderSummary"
            app:destination="@id/stakeholderSummary" />
    </fragment>
    <fragment
        android:id="@+id/stakeholderNew"
        android:name="be.kuleuven.elcontador10.fragments.stakeholders.StakeholderNew"
        android:label="fragment_stakeholder_new"
        tools:layout="@layout/fragment_stakeholder_new" >
        <action
            android:id="@+id/action_stakeholderNew_to_stakeholderSummary"
            app:destination="@id/stakeholderSummary" />
        <argument
            android:name="editStakeholder"
            app:argType="be.kuleuven.elcontador10.background.parcels.EditStakeholderParcel"
            app:nullable="true"
            android:defaultValue="@null" />
        <action
            android:id="@+id/action_stakeholderNew_to_stakeholderDisplay"
            app:destination="@id/stakeholderDisplay" />
    </fragment>
    <fragment
        android:id="@+id/stakeholderSummary"
        android:name="be.kuleuven.elcontador10.fragments.stakeholders.StakeholderSummary"
        android:label="fragment_stakeholder_summary"
        tools:layout="@layout/fragment_stakeholder_summary" >
        <argument
            android:name="filter"
            app:argType="be.kuleuven.elcontador10.background.parcels.FilterStakeholdersParcel"
            app:nullable="true" />
        <action
            android:id="@+id/action_stakeholderSummary_to_stakeholderFilter"
            app:destination="@id/stakeholderFilter" />
        <action
            android:id="@+id/action_stakeholderSummary_to_stakeholderNew"
            app:destination="@id/stakeholderNew" />
        <action
            android:id="@+id/action_stakeholderSummary_to_stakeholderDisplay"
            app:destination="@id/stakeholderDisplay" />
    </fragment>
    <fragment
        android:id="@+id/signIn"
        android:name="be.kuleuven.elcontador10.fragments.SignIn"
        android:label="fragment_sign_in"
        tools:layout="@layout/fragment_sign_in"
        >
        <action
            android:id="@+id/action_signIn_to_accounts"
            app:destination="@id/accounts"
            app:enterAnim="@anim/nav_default_pop_enter_anim"
            app:popEnterAnim="@anim/nav_default_pop_enter_anim"
            app:popUpTo="@id/accounts"
            app:popUpToInclusive="false" />
    </fragment>
    <fragment
        android:id="@+id/chooseStakeHolderDialog"
        android:name="be.kuleuven.elcontador10.fragments.transactions.ChooseStakeHolder"
        android:label="fragment_choose_stake_holder"
        tools:layout="@layout/fragment_choose_stake_holder" >
        <action
            android:id="@+id/action_chooseStakeHolderDialog_to_newTransaction"
            app:popUpTo="@id/newTransaction"/>
    </fragment>
    <fragment
        android:id="@+id/viewPagerHolder"
        android:name="be.kuleuven.elcontador10.fragments.ViewPagerHolder"
        android:label="fragment_view_pager_holder"
        tools:layout="@layout/fragment_view_pager_holder" >
        <action
            android:id="@+id/action_viewPagerHolder_to_newTransaction"
            app:destination="@id/newTransaction" />
        <action
            android:id="@+id/action_viewPagerHolder_to_transactionDisplay"
            app:destination="@id/transactionDisplay" />
        <action
            android:id="@+id/action_viewPagerHolder_to_newTransaction2"
            app:destination="@id/newTransaction" />
    </fragment>
    <fragment
        android:id="@+id/accounts"
        android:name="be.kuleuven.elcontador10.fragments.accounts.Accounts"
        android:label="fragment_home"
        tools:layout="@layout/fragment_home" >
        <action
            android:id="@+id/action_accounts_to_viewPagerHolder"
            app:destination="@id/viewPagerHolder" />
        <action
            android:id="@+id/action_accounts_to_newTransaction"
            app:destination="@id/newTransaction" />
        <action
            android:id="@+id/action_accounts_to_signIn"
            app:destination="@id/signIn"
            app:popUpTo="@id/signIn" />
        <action
            android:id="@+id/action_accounts_to_addNewAccount"
            app:destination="@id/addNewAccount" />
    </fragment>
    <fragment
        android:id="@+id/addNewAccount"
        android:name="be.kuleuven.elcontador10.fragments.accounts.AddNewAccount"
        android:label="fragment_add_new_account"
        tools:layout="@layout/fragment_add_new_account" />
</navigation>