<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/accounts">

    <fragment
        android:id="@+id/transactionDisplay"
        android:name="be.kuleuven.elcontador10.fragments.transactions.DisplayTransaction.TransactionDisplay"
        android:label="fragment_transaction_display"
        tools:layout="@layout/fragment_transaction_display" >
        <argument
            android:name="id"
            app:argType="string" />
        <action
            android:id="@+id/action_transactionDisplay_to_displayPhoto2"
            app:destination="@id/displayPhoto2" />
    </fragment>
    <fragment
        android:id="@+id/newTransaction"
        android:name="be.kuleuven.elcontador10.fragments.transactions.NewTransaction.TransactionNew"
        android:label="fragment_new_transaction"
        tools:layout="@layout/fragment_transaction_new" >
        <action
            android:id="@+id/action_newTransaction_to_chooseCategory"
            app:destination="@id/chooseCategory" />
        <action
            android:id="@+id/action_newTransaction_to_propertiesList"
            app:destination="@id/propertiesList" />
        <action
            android:id="@+id/action_newTransaction_to_stakeholders"
            app:destination="@id/stakeholders" />
        <argument
            android:name="idStakeholder"
            app:argType="string"
            app:nullable="true"
            android:defaultValue="@null" />
        <argument android:name="idProperty"
            app:argType="string"
            app:nullable="true"
            android:defaultValue="@null" />
    </fragment>
    <fragment
        android:id="@+id/signIn"
        android:name="be.kuleuven.elcontador10.fragments.SignIn"
        android:label="fragment_sign_in"
        tools:layout="@layout/fragment_sign_in"
        >
        <action
            android:id="@+id/action_signIn_to_accounts"
            app:destination="@id/accounts"
            app:enterAnim="@anim/nav_default_pop_enter_anim"
            app:popEnterAnim="@anim/nav_default_pop_enter_anim"
            app:popUpTo="@id/accounts"
            app:popUpToInclusive="false" />
    </fragment>
    <fragment
        android:id="@+id/accounts"
        android:name="be.kuleuven.elcontador10.fragments.accounts.Accounts"
        android:label="fragment_home"
        tools:layout="@layout/fragment_home" >
        <action
            android:id="@+id/action_accounts_to_newTransaction"
            app:destination="@id/newTransaction" />
        <action
            android:id="@+id/action_accounts_to_signIn"
            app:destination="@id/signIn"
            app:popUpTo="@id/signIn" />
        <action
            android:id="@+id/action_accounts_to_addNewAccount"
            app:destination="@id/addNewAccount" />
        <action
            android:id="@+id/action_accounts_to_allTransactions2"
            app:destination="@id/allTransactions2" />
    </fragment>
    <fragment
        android:id="@+id/addNewAccount"
        android:name="be.kuleuven.elcontador10.fragments.accounts.AddNewAccount"
        android:label="fragment_add_new_account"
        tools:layout="@layout/fragment_add_new_account" />
    <fragment
        android:id="@+id/newMicroAccount"
        android:name="be.kuleuven.elcontador10.fragments.stakeholders.NewStakeholder"
        android:label="fragment_add_new_microaccount"
        tools:layout="@layout/fragment_add_new_microaccount" >
        <argument
            android:name="idStakeholder"
            app:argType="string"
            app:nullable="true" />
    </fragment>
    <fragment
        android:id="@+id/stakeholderViewPagerHolder"
        android:name="be.kuleuven.elcontador10.fragments.stakeholders.StakeholderViewPageHolder"
        android:label="fragment_stakeholder_view_holder"
        tools:layout="@layout/fragment_micro_account_view_holder">
        <argument
            android:name="StakeHolder"
            app:argType="be.kuleuven.elcontador10.background.model.StakeHolder" />
        <action
            android:id="@+id/action_microAccountViewPagerHolder_to_transactionDisplay"
            app:destination="@id/transactionDisplay" />
        <action
            android:id="@+id/action_microAccountViewPagerHolder_to_newTransaction"
            app:destination="@id/newTransaction" />
        <action
            android:id="@+id/action_stakeholderViewPagerHolder_to_newMicroAccount"
            app:destination="@id/newMicroAccount" />
        <action
            android:id="@+id/action_stakeholderViewPagerHolder_to_propertyViewPageHolder"
            app:destination="@id/propertyViewPageHolder" />
        <action
            android:id="@+id/action_stakeholderViewPagerHolder_to_transactionFutureNew"
            app:destination="@id/transactionFutureNew" />
    </fragment>
    <fragment
        android:id="@+id/transactionFutureNew"
        android:name="be.kuleuven.elcontador10.fragments.transactions.NewTransaction.FutureTransactionsNew"
        android:label="fragment_transaction_future_new"
        tools:layout="@layout/fragment_transaction_future_new">
        <argument
            android:name="idStakeholder"
            app:argType="string"
            app:nullable="true"
            android:defaultValue="@null" />
        <action
            android:id="@+id/action_contractNewPayment_to_chooseCategory"
            app:destination="@id/chooseCategory" />
        <action
            android:id="@+id/action_contractNewPayment_to_propertiesList"
            app:destination="@id/propertiesList" />
        <action
            android:id="@+id/action_transactionFutureNew_to_stakeholders"
            app:destination="@id/stakeholders" />
        <argument android:name="idProperty"
            app:argType="string"
            app:nullable="true"
            android:defaultValue="@null" />
    </fragment>
    <fragment
        android:id="@+id/chooseCategory"
        android:name="be.kuleuven.elcontador10.fragments.transactions.Categories.ChooseCategory"
        android:label="fragment_choose_category"
        tools:layout="@layout/fragment_choose_category" >
        <argument
            android:name="newTransaction"
            app:argType="boolean" />
    </fragment>
    <fragment
        android:id="@+id/displayPhoto2"
        android:name="be.kuleuven.elcontador10.fragments.transactions.DisplayTransaction.DisplayPhoto"
        android:label="fragment_display_photo"
        tools:layout="@layout/fragment_display_photo" />
    <fragment
        android:id="@+id/allTransactions2"
        android:name="be.kuleuven.elcontador10.fragments.transactions.AllTransactions.AllTransactions"
        android:label="fragment_all_transactions"
        tools:layout="@layout/fragment_all_transactions" >
        <action
            android:id="@+id/action_allTransactions2_to_newTransaction"
            app:destination="@id/newTransaction" />
        <action
            android:id="@+id/action_allTransactions2_to_transactionDisplay"
            app:destination="@id/transactionDisplay" />
        <action
            android:id="@+id/action_allTransactions2_to_accountSettings"
            app:destination="@id/accountSettings" />
        <action
            android:id="@+id/action_allTransactions2_to_contractNewPayment"
            app:destination="@id/transactionFutureNew" />
    </fragment>
    <fragment
        android:id="@+id/stakeholders"
        android:name="be.kuleuven.elcontador10.fragments.stakeholders.StakeholdersList"
        android:label="fragment_all_micro_acounts"
        tools:layout="@layout/fragment_all_micro_acounts" >
        <action
            android:id="@+id/action_allMicroAccounts2_to_newMicroAccount"
            app:destination="@id/newMicroAccount" />
        <action
            android:id="@+id/action_stakeholders_to_stakeholder"
            app:destination="@id/stakeholderViewPagerHolder" />
        <action
            android:id="@+id/action_stakeholders_to_accountSettings"
            app:destination="@id/accountSettings" />
        <argument
            android:name="prevFragment"
            app:argType="string"
            android:defaultValue="@null"
            app:nullable="true" />
    </fragment>
    <fragment
        android:id="@+id/accountSettings"
        android:name="be.kuleuven.elcontador10.fragments.accounts.AccountSettings"
        android:label="fragment_account_settings"
        tools:layout="@layout/fragment_account_settings" >
        <action
            android:id="@+id/action_accountSettings_to_accounts"
            app:destination="@id/accounts"
            app:popUpTo="@id/accounts" />
    </fragment>
    <fragment
        android:id="@+id/propertiesList"
        android:name="be.kuleuven.elcontador10.fragments.property.PropertiesList"
        android:label="PropertiesList"
        tools:layout="@layout/fragment_all_properties">
        <action
            android:id="@+id/action_propertiesList_to_addProperty"
            app:destination="@id/addProperty" />
        <argument
            android:name="previousFragment"
            app:argType="string"
            android:defaultValue="@null"
            app:nullable="true" />
        <action
            android:id="@+id/action_propertiesList_to_accountSettings"
            app:destination="@id/accountSettings" />
        <action
            android:id="@+id/action_propertiesList_to_propertyViewPageHolder"
            app:destination="@id/propertyViewPageHolder" />
    </fragment>
    <fragment
        android:id="@+id/addProperty"
        android:name="be.kuleuven.elcontador10.fragments.property.AddProperty"
        android:label="AddProperty"
        tools:layout="@layout/fragment_add_new_property">
        <argument
            android:name="property"
            app:argType="be.kuleuven.elcontador10.background.model.Property" />
        <action
            android:id="@+id/action_addProperty_to_stakeholders"
            app:destination="@id/stakeholders" />
    </fragment>
    <fragment
        android:id="@+id/propertyViewPageHolder"
        android:name="be.kuleuven.elcontador10.fragments.property.PropertyViewPageHolder"
        android:label="PropertyViewPageHolder"
        tools:layout="@layout/fragment_micro_account_view_holder">
        <argument
            android:name="property"
            app:argType="be.kuleuven.elcontador10.background.model.Property" />
        <action
            android:id="@+id/action_propertyViewPageHolder_to_transactionDisplay"
            app:destination="@id/transactionDisplay" />
        <action
            android:id="@+id/action_propertyViewPageHolder_to_addProperty"
            app:destination="@id/addProperty" />
        <action
            android:id="@+id/action_propertyViewPageHolder_to_newTransaction"
            app:destination="@id/newTransaction" />
        <action
            android:id="@+id/action_propertyViewPageHolder_to_transactionFutureNew"
            app:destination="@id/transactionFutureNew" />
    </fragment>
</navigation>