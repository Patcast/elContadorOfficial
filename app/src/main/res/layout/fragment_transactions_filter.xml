<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragments.transactions.TransactionsFilter">

    <Spinner
        android:id="@+id/FilterTransCategory"
        android:layout_width="350dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:entries="@array/category_items"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Spinner
        android:id="@+id/FilterTransSubcategory"
        android:layout_width="350dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:visibility="invisible"
        app:layout_constraintEnd_toEndOf="@+id/FilterTransCategory"
        app:layout_constraintTop_toBottomOf="@+id/FilterTransCategory" />

    <EditText
        android:id="@+id/FilterTransName"
        android:layout_width="350dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:ems="10"
        android:hint="Name"
        android:inputType="textPersonName"
        app:layout_constraintStart_toStartOf="@+id/FilterTransSubcategory"
        app:layout_constraintTop_toBottomOf="@+id/FilterTransSubcategory" />

    <Switch
        android:id="@+id/FilterTransFromSwitch"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:text="From"
        app:layout_constraintStart_toStartOf="@+id/FilterTransName"
        app:layout_constraintTop_toBottomOf="@+id/FilterTransName" />

    <EditText
        android:id="@+id/FilterTransFrom"
        android:layout_width="350dp"
        android:layout_height="wrap_content"
        android:ems="10"
        android:enabled="false"
        android:hint="DD/MM/YYYY"
        android:inputType="date"
        app:layout_constraintStart_toStartOf="@+id/FilterTransFromSwitch"
        app:layout_constraintTop_toBottomOf="@+id/FilterTransFromSwitch" />

    <Switch
        android:id="@+id/FilterTransToSwitch"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:text="To"
        app:layout_constraintStart_toStartOf="@+id/FilterTransFrom"
        app:layout_constraintTop_toBottomOf="@+id/FilterTransFrom" />

    <EditText
        android:id="@+id/FilterTransTo"
        android:layout_width="350dp"
        android:layout_height="wrap_content"
        android:ems="10"
        android:enabled="false"
        android:hint="DD/MM/YYYY"
        android:inputType="date"
        app:layout_constraintStart_toStartOf="@+id/FilterTransFromSwitch"
        app:layout_constraintTop_toBottomOf="@+id/FilterTransToSwitch" />

    <Button
        android:id="@+id/FilterTransFilter"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="40dp"
        android:background="@drawable/buttons"
        android:text="Filter"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/FilterTransCancel" />

    <Button
        android:id="@+id/FilterTransCancel"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:background="@drawable/buttons"
        android:text="@android:string/cancel"
        app:layout_constraintEnd_toStartOf="@+id/FilterTransFilter"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/FilterTransFilter" />

</androidx.constraintlayout.widget.ConstraintLayout>