<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingHorizontal="20dp"
    android:paddingVertical="5dp"
    android:orientation="vertical"
    android:background="@color/rec_view_gray"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/bs_layout_transaction"
        android:paddingVertical="10dp"
        android:orientation="horizontal"
        >

        <ImageView
            android:id="@+id/bs_icon_transaction"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@drawable/ic_baseline_radio_button_checked_24"
            tools:ignore="VectorDrawableCompat" />
        <TextView
            android:layout_marginTop="10dp"
            android:layout_marginLeft="30dp"
            android:id="@+id/textView8"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Transactions"
            android:textColor="@color/white"
            android:textSize="25sp"
            android:layout_marginStart="30dp" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/bs_layout_Receivables"
        android:paddingVertical="10dp"
        android:orientation="horizontal"
        >

        <ImageView
            android:id="@+id/bs_icon_receivables"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@drawable/ic_baseline_radio_button_unchecked_24"
            tools:ignore="VectorDrawableCompat" />
        <TextView
            android:layout_marginTop="10dp"
            android:layout_marginLeft="30dp"
            android:id="@+id/textView84"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Receivables"
            android:textColor="@color/white"
            android:textSize="25sp"
            android:layout_marginStart="30dp" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/bs_layout_Payables"
        android:paddingVertical="10dp"
        android:orientation="horizontal"
        >

        <ImageView
            android:id="@+id/bs_icon_payables"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@drawable/ic_baseline_radio_button_unchecked_24"
            tools:ignore="VectorDrawableCompat" />
        <TextView
            android:layout_marginTop="10dp"
            android:layout_marginLeft="30dp"
            android:id="@+id/textView82"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Payables"
            android:textColor="@color/white"
            android:textSize="25sp"
            android:layout_marginStart="30dp" />
    </LinearLayout>








</LinearLayout>