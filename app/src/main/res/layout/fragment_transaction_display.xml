<?xml version="1.0" encoding="utf-8"?>
<ScrollView

    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_height="match_parent"
    android:layout_width="match_parent">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center"
            tools:context=".fragments.transactions.DisplayTransaction.TransactionDisplay"
           >
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal"
                    android:padding="25dp"
                    android:background="@color/superDarkGrey">
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            app:layout_constraintBottom_toTopOf="@+id/guideline10"
                            android:gravity="center"
                            android:background="@drawable/background_transaction_display"
                            android:layout_marginHorizontal="40dp"
                            android:padding="15dp"
                            >

                                <TextView
                                    android:id="@+id/textAmount"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="$5,000.00"
                                    android:textColor="@color/white"
                                    android:textSize="35sp"
                                    android:textStyle="bold"
                                    android:layout_marginBottom="10dp"
                                    />
                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:orientation="horizontal"
                                    android:layout_marginBottom="10dp"
                                    android:gravity="center"
                                    >
                                        <TextView
                                            android:id="@+id/txtCategoryIcon"
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:text="ðŸ’°"
                                            android:textColor="@color/white"
                                            />
                                        <TextView
                                            android:layout_marginLeft="5dp"
                                            android:layout_marginStart="5dp"
                                            android:id="@+id/txtCategoryTitle"
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:text="TransportaciÃ³n"
                                            android:textColor="@color/white"
                                            />
                                </LinearLayout>

                                <TextView
                                    android:id="@+id/textConcerningDisplay"
                                    android:layout_width="wrap_content"
                                    android:layout_height="0dp"
                                    android:layout_weight="1"
                                    android:text="Paid by Juan Carlos"
                                    android:textStyle="bold"
                                    android:textColor="@color/white"
                                    />




                        </LinearLayout>
                </LinearLayout>


                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="20dp"
                    android:background="@color/toolBar_color"
                    >

                </androidx.constraintlayout.widget.ConstraintLayout>
                <TableLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingVertical="20dp"
                    android:paddingHorizontal="30dp"
                    android:gravity="center">
                        <TableRow
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_marginVertical="7dp"
                            >

                                <TextView
                                    android:id="@+id/textAccountChosen"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="@string/account"
                                    android:layout_marginRight="10dp"
                                    android:layout_marginEnd="10dp" />

                                <TextView

                                    android:layout_marginLeft="30dp"
                                    android:layout_marginStart="30dp"
                                    android:id="@+id/textAccountChosenDisplay"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1"
                                    android:text="TextView"
                                    />


                        </TableRow>

                        <TableRow
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_marginVertical="7dp"

                            >
                                <TextView
                                    android:id="@+id/txtIdTransaction"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Id: "
                                    app:layout_constraintStart_toStartOf="@+id/guideline11"
                                    app:layout_constraintTop_toTopOf="@+id/guideline10" />
                                <TextView
                                    android:layout_marginLeft="30dp"
                                    android:layout_marginStart="30dp"
                                    android:id="@+id/txtIdTransactionDISPLAY"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="TextView"

                                    app:layout_constraintStart_toStartOf="@+id/guideline13"
                                    app:layout_constraintTop_toTopOf="@+id/guideline10"
                                    />

                        </TableRow>


                        <TableRow
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_marginVertical="7dp"
                            >

                                <TextView
                                    android:id="@+id/txtDate"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="@string/date"/>

                                <TextView
                                    android:layout_marginLeft="30dp"
                                    android:layout_marginStart="30dp"
                                    android:id="@+id/txtDateDisplay"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="TextView"
                                    />


                        </TableRow>
                        <TableRow
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_marginVertical="7dp"
                            >

                                <TextView
                                    android:id="@+id/txtTime"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="@string/time"/>

                                <TextView
                                    android:layout_marginLeft="30dp"
                                    android:layout_marginStart="30dp"
                                    android:id="@+id/txtTimeDisplay"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="TextView"
                                    />


                        </TableRow>
                        <TableRow
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="left"
                            android:layout_marginVertical="7dp"
                            >

                                <TextView
                                    android:id="@+id/txtRegisteredBy"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="@string/made_by" />

                                <TextView
                                    android:layout_marginLeft="30dp"
                                    android:layout_marginStart="30dp"
                                    android:id="@+id/txtRegisteredByDisplay"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="TextView"/>


                        </TableRow>

                        <TableRow
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_marginVertical="7dp"
                            >

                                <TextView
                                    android:id="@+id/txtNotes"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="@string/notes" />
                                <TextView
                                    android:layout_marginLeft="30dp"
                                    android:layout_marginStart="30dp"
                                    android:id="@+id/txtNotesDisplay"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:text="TextView"
                                    />

                        </TableRow>

                </TableLayout>
                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="20dp"
                    android:background="@color/toolBar_color"
                    android:paddingHorizontal="30dp"
                    >
                        <TextView
                            android:id="@+id/textView7"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/photo_captured"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent" />
                </androidx.constraintlayout.widget.ConstraintLayout>
                <LinearLayout
                    android:id="@+id/layout_photoDownloaded_holder"
                    android:visibility="gone"
                    android:layout_width="match_parent"
                    android:layout_height="240dp"
                    android:orientation="horizontal"
                    android:padding="10dp"
                    android:gravity="center">
                        <ImageView
                            android:layout_marginVertical="10dp"
                            android:id="@+id/image_transaction_photoDownloaded"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            app:srcCompat="@drawable/test_paper"
                            />

                </LinearLayout>


                        <androidx.constraintlayout.widget.ConstraintLayout
                            android:id="@+id/layout_addPhoto"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:padding="20dp"
                            android:visibility="gone"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toBottomOf="@+id/textView7">

                                <TextView
                                    android:id="@+id/text_add_image"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="@string/add_an_image"
                                    app:layout_constraintEnd_toEndOf="parent"
                                    app:layout_constraintStart_toStartOf="parent"
                                    app:layout_constraintTop_toBottomOf="@+id/btn_add_image" />

                                <ImageButton
                                    android:id="@+id/btn_add_image"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:contentDescription="@string/add_an_image"
                                    app:layout_constraintBottom_toTopOf="@+id/text_add_image"
                                    app:layout_constraintEnd_toEndOf="parent"
                                    app:layout_constraintStart_toStartOf="parent"
                                    app:layout_constraintTop_toTopOf="parent"
                                    app:srcCompat="@drawable/ic_baseline_add_a_photo_24" />


                        </androidx.constraintlayout.widget.ConstraintLayout>

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="20dp"
                    android:background="@color/toolBar_color"
                    />

                <Button
                            android:id="@+id/buttonDeleteTransaction"
                            android:layout_width="180dp"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="30dp"
                            android:text="@string/delete"
                            android:background="@drawable/background_buttons" />


        </LinearLayout>

</ScrollView>