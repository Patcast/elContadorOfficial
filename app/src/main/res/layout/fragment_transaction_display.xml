<?xml version="1.0" encoding="utf-8"?>
<ScrollView

    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_height="match_parent"
    android:layout_width="match_parent">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center"
            tools:context=".fragments.transactions.DisplayTransaction.TransactionDisplay"
           >

                <LinearLayout
                    android:id="@+id/layoutTransactionHolder"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@color/superDarkGrey"
                    android:orientation="horizontal"
                    android:padding="25dp">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginHorizontal="40dp"
                            android:background="@drawable/background_transaction_display"
                            android:gravity="center"
                            android:orientation="vertical"
                            android:padding="15dp"
                            app:layout_constraintBottom_toTopOf="@+id/guideline10">

                                <TextView
                                    android:id="@+id/textAmount"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginBottom="10dp"
                                    android:text="$50,000,000.00"
                                    android:textColor="@color/white"
                                    android:textSize="32sp"
                                    android:textStyle="bold" />

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:layout_marginBottom="10dp"
                                    android:gravity="center"
                                    android:orientation="horizontal">

                                        <TextView
                                            android:id="@+id/txtCategoryIcon"
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:text="ðŸ’°"
                                            android:textColor="@color/white" />

                                        <TextView
                                            android:id="@+id/txtCategoryTitle"
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:layout_marginStart="5dp"
                                            android:layout_marginLeft="5dp"
                                            android:ellipsize="end"
                                            android:maxLines="1"
                                            android:text="TransportaciÃ³n"
                                            android:textColor="@color/white" />
                                </LinearLayout>

                                <TextView
                                    android:id="@+id/textConcerningDisplay"
                                    android:layout_width="wrap_content"
                                    android:layout_height="0dp"
                                    android:layout_weight="1"
                                    android:ellipsize="end"
                                    android:gravity="center_horizontal"
                                    android:text="Paid by Juan Carlos"
                                    android:textColor="@color/white"
                                    android:textStyle="bold" />


                        </LinearLayout>
                </LinearLayout>


                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="20dp"
                    android:background="@color/toolBar_color"
                    >

                </androidx.constraintlayout.widget.ConstraintLayout>
                <TableLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingVertical="20dp"
                    android:paddingHorizontal="30dp"
                    android:gravity="center">

                        <TableRow
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_gravity="center"
                            android:layout_marginVertical="7dp">

                                <TextView
                                    android:id="@+id/textAccountChosen"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginEnd="10dp"
                                    android:layout_marginRight="10dp"
                                    android:text="@string/account" />

                                <TextView

                                    android:id="@+id/textAccountChosenDisplay"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginStart="30dp"
                                    android:layout_marginLeft="30dp"
                                    android:layout_weight="1"
                                    android:ellipsize="end"
                                    android:maxLines="1"
                                    android:text="Gonzales Ortega" />


                        </TableRow>

                        <TableRow
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_marginVertical="7dp"
                            >

                                <TextView
                                    android:id="@+id/textTransType"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginEnd="10dp"
                                    android:layout_marginRight="10dp"
                                    android:text="@string/type" />

                                <TextView

                                    android:id="@+id/textTransTypeDisplay"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginStart="30dp"
                                    android:layout_marginLeft="30dp"
                                    android:layout_weight="1"
                                    android:ellipsize="end"
                                    android:maxLines="1"
                                    android:text="Cash / Payable" />


                        </TableRow>

                        <TableRow
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_marginVertical="7dp"
                            >

                                <TextView
                                    android:id="@+id/txtDate"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="@string/date"/>

                                <TextView
                                    android:id="@+id/txtDateDisplay"
                                    android:layout_marginLeft="30dp"
                                    android:layout_marginStart="30dp"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1"
                                    android:ellipsize="end"
                                    android:maxLines="1"
                                    android:text="20/09/2021"
                                    />


                        </TableRow>
                        <TableRow
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_marginVertical="7dp"
                            >

                                <TextView
                                    android:id="@+id/txtTime"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="@string/time"/>

                                <TextView
                                    android:id="@+id/txtTimeDisplay"
                                    android:layout_marginLeft="30dp"
                                    android:layout_marginStart="30dp"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1"
                                    android:ellipsize="end"
                                    android:maxLines="1"
                                    android:text="20:49 "
                                    />


                        </TableRow>
                        <TableRow
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="left"
                            android:layout_marginVertical="7dp"
                            >

                                <TextView
                                    android:id="@+id/txtRegisteredBy"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="@string/made_by" />

                                <TextView

                                    android:id="@+id/txtRegisteredByDisplay"
                                    android:layout_marginLeft="30dp"
                                    android:layout_marginStart="30dp"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1"
                                    android:ellipsize="end"
                                    android:maxLines="1"
                                    android:text="Patrici02983"/>


                        </TableRow>

                        <TableRow
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_marginVertical="7dp"
                            >

                                <TextView
                                    android:id="@+id/txtNotes"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="@string/notes" />
                                <TextView
                                    android:id="@+id/txtNotesDisplay"
                                    android:layout_marginLeft="30dp"
                                    android:layout_marginStart="30dp"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1"
                                    android:ellipsize="end"
                                    android:maxLines="6"
                                    android:text="Este es el texto sobre mu dia hoy me levante super fresco a las 12 de la tarde estuvo super divertid"
                                    />

                        </TableRow>

                </TableLayout>
                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="20dp"
                    android:background="@color/toolBar_color"
                    android:paddingHorizontal="30dp"
                    >
                        <TextView
                            android:id="@+id/textView7"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/photo_captured"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent" />
                </androidx.constraintlayout.widget.ConstraintLayout>

                <LinearLayout
                    android:id="@+id/layout_photoDownloaded_holder"
                    android:layout_width="match_parent"
                    android:layout_height="200dp"
                    android:orientation="horizontal"
                    android:padding="10dp"
                    android:gravity="center">
                       <com.google.android.material.progressindicator.CircularProgressIndicator
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:indeterminate="true"
                           android:visibility="visible"
                            app:indicatorColor="@color/white"
                            android:id="@+id/progress_indicator_displayTrans"
                            />

                        <ImageView
                            android:layout_marginVertical="10dp"
                            android:id="@+id/image_transaction_photoDownloaded"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            />
                        <androidx.constraintlayout.widget.ConstraintLayout
                            android:id="@+id/layout_addPhoto"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:padding="20dp"
                            android:visibility="gone"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toBottomOf="@+id/textView7">

                               <!-- <TextView
                                    android:id="@+id/text_add_image"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="@string/add_an_image"
                                    app:layout_constraintEnd_toEndOf="parent"
                                    app:layout_constraintStart_toStartOf="parent"
                                    app:layout_constraintTop_toBottomOf="@+id/btn_add_image" />-->

                                <ImageView
                                    android:id="@+id/btn_add_image"
                                    android:layout_width="0dp"
                                    android:layout_height="60dp"
                                    android:contentDescription="@string/add_an_image"
                                    app:layout_constraintBottom_toBottomOf="parent"
                                    app:layout_constraintEnd_toEndOf="parent"
                                    app:layout_constraintStart_toStartOf="parent"
                                    app:layout_constraintTop_toTopOf="parent"
                                    app:srcCompat="@drawable/ic_baseline_add_a_photo_24" />


                        </androidx.constraintlayout.widget.ConstraintLayout>

                </LinearLayout>




                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="20dp"
                    android:background="@color/toolBar_color"
                    />


        </LinearLayout>

</ScrollView>