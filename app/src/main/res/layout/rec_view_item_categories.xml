<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/recView_item_categories"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginVertical="2dp"
    android:background="@color/rec_view_transactions">

        <TextView
            android:id="@+id/textView_category_name"
            android:layout_width="256dp"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:maxLines="1"
            android:text="Rentas"
            android:textSize="20sp"
            app:layout_constraintBottom_toTopOf="@+id/textView_category_description"
            app:layout_constraintEnd_toStartOf="@+id/btn_edit_category"
            app:layout_constraintStart_toEndOf="@+id/imageButton_category_icon"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_chainStyle="packed" />

        <TextView
            android:id="@+id/textView_category_description"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="TextView"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="@+id/textView_category_name"
            app:layout_constraintTop_toBottomOf="@+id/textView_category_name" />

        <TextView
            android:id="@+id/imageButton_category_icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginLeft="10dp"
            android:text="⚙️"
            android:textSize="25sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageButton
            android:id="@+id/btn_edit_category"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:background="@color/rec_view_transactions"
            android:contentDescription="@string/edit"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/ic_edit_gray"
            tools:visibility="visible" />


        <!--     <com.google.android.material.switchmaterial.SwitchMaterial
                 android:id="@+id/switch_category"
                 android:layout_width="wrap_content"
                 android:layout_height="wrap_content"
                 app:layout_constraintBottom_toBottomOf="parent"
                 app:layout_constraintEnd_toEndOf="parent"
                 app:layout_constraintTop_toTopOf="parent"
                 tools:ignore="TouchTargetSizeCheck"
                 android:visibility="gone"/>-->

</androidx.constraintlayout.widget.ConstraintLayout>
